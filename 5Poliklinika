using System;

namespace romchik
{
    class Program
    {
        static void Main(string[] args)
        {
            int timePriyomaPerMinutes = 10;
            string grannyCount = " ";
            int inputGranny = 0;
            int minutesCount;
            int waitingPerMinutes;
            int waitingPerHours;

            Console.Write("Введите кол-во старушек: ");
            grannyCount = Console.ReadLine();
            int.TryParse(grannyCount, out inputGranny);

            minutesCount = inputGranny * timePriyomaPerMinutes;
            waitingPerHours = minutesCount / 60;
            waitingPerMinutes = minutesCount % 60;
            Console.WriteLine($"Вы должны отстоять в очереди {waitingPerHours} часов и {waitingPerMinutes} минут");
        }
    }
}
